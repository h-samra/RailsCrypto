<% if @crypto.symbol %>
  <% @crypto.symbol = @crypto.symbol.upcase %>
<% end %>

<% for x in @show_crypto %>
  <% if @crypto.symbol == x["symbol"] %>
    <% @crypto_name = x["name"] %>
    <% @crypto_prcnt_1h = x["percent_change_1h"] %>
    <% @crypto_prcnt_24h = x["percent_change_24h"] %>
    <% @crypto_prcnt_7d = x["percent_change_7d"] %>
    <% @crypto_price = x["price_usd"] %>
    <% @crypto_rank = x["rank"] %>
    
  <% end %>
<% end %>

          




<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">
      <%= @crypto_name %>
      </h2>
  </div>
  <div class="panel-body">
    

    <h1>
        <%= @crypto.symbol.upcase %>
    </h1>
    
    <br>
    <br>

    <strong>Current Price USD:</strong>
    <%= number_to_currency(@crypto_price) %>
    
    <br>
    <br>
    
    <strong>Crypto Rank:</strong>
    <%= @crypto_rank %>
    
    <br>
    <br>
    
    <strong>Percent Change 1 hour:</strong>
    <%= @crypto_prcnt_1h %>%
    
    <br>
    
    <strong>Percent Change 24 hours:</strong>
    <%= @crypto_prcnt_24h %>%
    
    <br>
    
    <strong>Percent Change 7 days:</strong>
    <%= @crypto_prcnt_7d %>%

    
  </div>
  
  <div class="panel-footer">
    <%= link_to 'Back', cryptos_path %> |
    <%= link_to 'Edit', edit_crypto_path(@crypto) %> |
    <%= link_to 'Delete', @crypto, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  
</div>








