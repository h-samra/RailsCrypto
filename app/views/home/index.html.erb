<h1>Welcome to my Crypto Portfolio Application!</h1>

<br/> <br/>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      Top Ranking Crypto Currencies
    </h1>
  </div>
  <div class="panel-body">
    
    
    
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Crypto Name</th>
      <th>Current Price</th>
      <th>Market Cap USD</th>
      <th>Percent Change Over 1h</th>
      <th>Percent Change Over 24h</th>
      <th>Percent Change Over 7d</th>
    </tr>
  </thead>

  <tbody>
      
    <% @coins %>

    <% @topXcryptos = 10 %>
    <% @counter = 1 %>
    
    
    <% while @counter < @topXcryptos + 1 %>
        <% for x in @coins %>
          <% if @counter == x["rank"].to_d %>
            <% @crypto_name = x["name"] %>
            <% @crypto_prcnt_1h = x["percent_change_1h"] %>
            <% @crypto_prcnt_24h = x["percent_change_24h"] %>
            <% @crypto_prcnt_7d = x["percent_change_7d"] %>
            <% @crypto_price = x["price_usd"] %>
            <% @crypto_rank = x["rank"] %>
            <% @crypto_market_cap = x["market_cap_usd"] %>
            <% @counter = @counter + 1 %>
            <% break %> 
          <% end %>
        <% end %>
        
        <tr>
          <td><%= @crypto_rank %></td>
          <td><%= @crypto_name %></td>
          <td><%= number_to_currency(@crypto_price) %></td>
          <td><%= number_to_currency(@crypto_market_cap) %></td>
          <td><%= @crypto_prcnt_1h %>%</td>
          <td><%= @crypto_prcnt_24h %>%</td>
          <td><%= @crypto_prcnt_7d %>%</td>
        </tr>
    <% end %>

  </tbody>
</table>

    
    

  </div>
  
  <div class="panel-footer">
      <strong> Sign up and start tracking your cryptos today! </strong>
<br>
<%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default" %>

</div>




